!!! 5
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html;charset=UTF-8'}
    %title= @page_title || "Booor.in"
    = stylesheet_link_tag 'main'
    = javascript_include_tag :defaults
  %body
    #content
      #header
        #logo
          BOOOR.IN
        #navigation
          %ul#main-links
            %li= link_to "Главная", root_path
            - if logged_in? 
              %li= link_to "Новые", images_path
              %li= link_to "Друзья", images_path
              %li= link_to "Лучшие", images_path
              %li= link_to "Мои", images_path
              %li= link_to "Выйти", logout_path
            - else
              %li= link_to "Войти", login_path
        #body
          #notices= notice
          = yield