#register-form
  %h2 Регистрация    
  - if session[:user_id].nil?
    - form_for(@user) do |f|
      = f.error_messages
      %p
        = f.label :name
        %br
        = f.text_field :name, :size => 50        
      %p
        = f.label :email
        %br
        = f.text_field :email, :size => 50
      %p
        = f.label :user_password, 'Password'
        %br
        = f.password_field :password, :size => 50
      %p
        = f.label :user_password_confirmation, 'Confirm Password'
        %br
        = f.password_field :password_confirmation, :size => 50
      %p
        = f.submit 'Register'        
  - else 
    %div Вам необходимо выйти из системы для начала